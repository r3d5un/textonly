{{ define "title" }}Posts{{ end }}
{{define "main"}}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 py-5">
            <!-- Categories widget-->
            <h1 class="display-5 fw-bold">Posts</h1>
            <p class="col-sm-8 col-lg-12 mx-auto mb-0 mb-lg-4">
                Articles, posts and notes published on <a href="/">Islandwind</a>.
            </p>
        </div>
        <div class="col-lg-6">
            <div class="posts-container mx-auto px-3">
                <h3>2023</h3>
                <ul class="list mb-5" style="list-style-type: none;">
                    {{ range .BlogPosts }}
                    <li style="list-style: none;">
                        <span title="{{ humanDate .Created }}" style="color: var(--bs-gray-600);">{{ humanDate .Created }}</span>
                         - 
                        <a href="/post/read/{{ .ID }}">
                            {{ .Title }}
                        </a>
                    </li>{{ end }}
                </ul>
            </div>
        </div>
    </div>
</div>
{{ end }}
